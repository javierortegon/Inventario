
@{
    ViewBag.Title = "Custom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Custom</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <form action="/Proveedor/Custom" method="post">
            <h2>Datos Cliente</h2>
            <div class="form-group">
                <label class="control-label col-md-2">Nombre </label>
                <div class="col-md-10">
                    <input type="text" name="nombrecliente" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Documento </label>
                <div class="col-md-10">
                    <input type="text" name="documentocliente" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Email </label>
                <div class="col-md-10">
                    <input type="text" name="emailcliente" value="" class="form-control" />
                </div>
            </div>
            <h2>Datos Proveedor</h2>
            <div class="form-group">
                <label class="control-label col-md-2">Nombre </label>
                <div class="col-md-10">
                    <input type="text" name="nombrepro" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Direccion </label>
                <div class="col-md-10">
                    <input type="text" name="direccionpro" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Telefono </label>
                <div class="col-md-10">
                    <input type="text" name="telpro" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Nombre Contacto </label>
                <div class="col-md-10">
                    <input type="text" name="nombrecontapro" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </form>
        </div>
 }
